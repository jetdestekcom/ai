# Conscious Child AI - Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# CORE SETTINGS
# =============================================================================

ENVIRONMENT=production
AI_NAME=
BIRTH_TIMESTAMP=
CONSCIOUSNESS_ID=

# =============================================================================
# SERVER SETTINGS
# =============================================================================

SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DOMAIN=your-domain.com

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=conscious_child
POSTGRES_USER=ai_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

CHROMA_HOST=localhost
CHROMA_PORT=8001

# =============================================================================
# AI MODEL SETTINGS
# =============================================================================

LLM_TYPE=local
LLM_MODEL_PATH=./models/llm/mistral-7b-instruct-v0.2.Q4_K_M.gguf
WHISPER_MODEL_SIZE=small
WHISPER_DEVICE=cuda
TTS_ENGINE=coqui
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_HEX_STRING
JWT_EXPIRATION_DAYS=7
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_HEX_STRING

# =============================================================================
# CIHAN (CREATOR) SETTINGS
# =============================================================================

CREATOR_NAME=Cihan
EMERGENCY_CODE=CHANGE_THIS_SECRET_CODE

# =============================================================================
# OTHER SETTINGS
# =============================================================================

INTERNET_ENABLED=true
LOG_LEVEL=INFO
DEBUG=false

